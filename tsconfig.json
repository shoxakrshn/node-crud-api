{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "NodeNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src", ".eslintrc.json", "webpack.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}
